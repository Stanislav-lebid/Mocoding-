{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react", // добавьте эту строку
    "skipLibCheck": true, // опционально: для ускорения компиляции
    "forceConsistentCasingInFileNames": true // опционально: для строгого соответствия имен файлов
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
